{% extends 'layaut.html.twig' %}

{% block titleContent %}
    Editer un  produit
    <small>Control panel</small>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    <li class="active"> Edition d'un produit</li>
{% endblock %}


{% block content %}

    <div class="row">
        <div class="col-md-12">
            {{ form_start(formproduit,{attr:{novalidate:"novalidate"}}) }}
            <div class="well box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Modifié le produit: <strong>{{ produit.titleFR|capitalize }}</strong></h3>
                </div>
                <!-- /.box-header -->

                <div class="form-group">
                    {{ form_errors(formproduit.titleFR) }}
                    {{ form_label(formproduit.titleFR, "Titre FR") }}
                    {{ form_widget(formproduit.titleFR, {attr: {placeholder: "Titre du produit FR", class: "form-control"} } ) }}
                </div>

                <div class="form-group">
                    {{ form_errors(formproduit.descriptionFR) }}
                    {{ form_label(formproduit.descriptionFR, "Déscription FR") }}
                    {{ form_widget(formproduit.descriptionFR, {attr: {placeholder: "Déscription du protuit FR", class: "form-control"} } ) }}
                </div>

                <div class="form-group">
                    {{ form_errors(formproduit.titleEN) }}
                    {{ form_label(formproduit.titleEN, "Titre EN") }}
                    {{ form_widget(formproduit.titleEN, {attr: {placeholder: "Titre du produit EN", class: "form-control"} } ) }}
                </div>

                <div class="form-group">
                    {{ form_errors(formproduit.descriptionEN) }}
                    {{ form_label(formproduit.descriptionEN, "Déscription EN") }}
                    {{ form_widget(formproduit.descriptionEN, {attr: {placeholder: "Déscription du protuit EN", class: "form-control"} } ) }}
                </div>

                <div class="form-group">
                    {{ form_errors(formproduit.price) }}
                    {{ form_label(formproduit.price, "Prix") }}
                    {{ form_widget(formproduit.price, {attr: { class: "form-control"} } ) }}
                </div>

                <div class="form-group">
                    {{ form_errors(formproduit.quantity) }}
                    {{ form_label(formproduit.quantity, "Quantité") }}
                    {{ form_widget(formproduit.quantity, {attr: { class: "form-control"} } ) }}
                </div>
                <div class="form-group">
                    {{ form_errors(formproduit.image) }}
                    {{ form_label(formproduit.image, "Image") }}
                    {{ form_widget(formproduit.image, {attr: { class: "form-control"} } ) }}
                </div>
                <div class="form-group">
                    {{ form_errors(formproduit.marque) }}
                    {{ form_label(formproduit.marque, "Marque") }}
                    {{ form_widget(formproduit.marque, {attr: { class: "form-control"} } ) }}
                </div>
                <div class="form-group">
                    {{ form_errors(formproduit.categories) }}
                    {{ form_label(formproduit.categories, "Catégorie") }}
                    {{ form_widget(formproduit.categories, {attr: { class: "form-control"} } ) }}
                </div>

            </div><!-- well box box-primary" -->
            <button class="btn btn-primary">Editer</button>

            {{ form_end(formproduit) }}
        </div><!-- col-md-12 -->
    </div><!-- row -->

{% endblock %}