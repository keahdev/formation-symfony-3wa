{% extends '::layaut.html.twig' %}

{% block titleContent %}
    Contact
    <small>Control panel</small>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active"> Contact</li>
{% endblock %}


{% block content %}



    {{ form_start(form,{attr:{'novalidate':'novalidate'}}) }}

    <div class="form-group">
        {{ form_errors(form.page) }}

        {{ form_label(form.page,"Page URL") }}

        {{ form_widget(form.page,
        {
            attr: {
            class: 'form-control',
            placeholder: "Votre URL"
        }
        }) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.bug) }}

        {{ form_label(form.bug) }}

        {{ form_widget(form.bug, {attr: {class: "form-control"} } ) }}
    </div>

    <div class="form-group">

        {{ form_errors(form.firstname) }}

        {{ form_label(form.firstname,"Prénom") }}

        {{ form_widget(form.firstname,
        {
            attr: {
            class: 'form-control',
            placeholder: "Votre prénom"
        }
        })
        }}
    </div>

    <div class="form-group">

        {{ form_errors(form.lastname) }}

        {{ form_label(form.lastname,"Nom") }}

        {{ form_widget(form.lastname,
        {
            attr: {
            class: 'form-control',
            placeholder: "Votre Nom"
        }
        })
        }}
    </div>


    <div class="form-group">
        {{ form_errors(form.email) }}

        {{ form_label(form.email, null) }}

        {{ form_widget(form.email,
        {
            attr: {
            placeholder: 'Votre email',
            class: "form-control"
        }})
        }}
    </div>


    <div class="form-group">

        {{ form_errors(form.date) }}

        {{ form_label(form.date) }}

        {{ form_widget(form.date)}}
    </div>

    <div class="form-group">
        {{ form_errors(form.content) }}

        {{ form_label(form.content,"Message") }}

        {{ form_widget(form.content,
        {
            attr:{
            class:"form-control"
        },

        }) }}
    </div>


    <button>Envoyer</button>

    {{ form_end(form) }}






